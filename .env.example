# Database configuration 
DATABASE_URL="mysql://user:password@127.0.0.1:3306/db-name?serverVersion=8.0&charset=utf8mb4"  # Replace user, password, and db-name
# MYSQL_ROOT_PASSWORD=examplepassword  <-- REMOVE: Never put root password in .env
# MYSQL_PASSWORD=examplepassword      <-- REMOVE: Regular user password is in DATABASE_URL
# MYSQL_DATABASE=db-name             <-- REMOVE: Database name is in DATABASE_URL
# DOCKER_DATABASE_PORT=port          <-- REMOVE: Port is usually in DATABASE_URL or configured separately

# Application secret (VERY IMPORTANT: Generate a strong, random key! Run 'php bin/console secrets:generate' or similar)
# APP_SECRET="a_very_long_and_random_secret_key"  <-- REMOVE this line; just have the comment below
APP_SECRET="CHANGE_THIS_APP_SECRET"  # Placeholder; MUST be changed

# API keys (if applicable)
API_KEY="YOUR_API_KEY"  # Placeholder

# Application environment (defaults to development)
APP_ENV=dev

# CORS settings (configure for your frontend domains in production)
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'  # Change this in production!

# JWT Authentication settings (generate unique keys for each environment)
# JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem  <-- REMOVE this line; just have the comment below
# JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem   <-- REMOVE this line; just have the comment below
# JWT_PASSPHRASE=                                           <-- REMOVE this line; just have the comment below

